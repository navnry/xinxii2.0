<template>
    <view class="content">
        <view class="cont" v-if="articleData">
            <view class="tit">{{articleData.title}}</view>
            <view class="time">{{articleData.channelName}} {{creadTime(articleData.createDate)}}</view>
            <x-rich-text :html="articleData.content"></x-rich-text>
        </view>
        <view class="list">
            <view class="line"></view>
            <view class="group">
                <view class="item" v-for="item in articleList" :key="item.id" @click="seeDetail(item)">·{{item.title}}</view>
            </view>
            <view class="tip">资讯内容不构成投资建议，投资者应独立决策并自行承担风险。</view>
        </view>
		<!-- #ifndef H5 -->
		<view class="seat" style="height: 88rpx;"></view>
		<view class="share-btn">
			<button @click="share">分享文章</button>
		</view>
		<!-- #endif -->
        <b-share-wechat :url="url" :title="articleData.title" :articleId="id" :imageUrl="articleData.pic+'?imageMogr2/thumbnail/200x200'" :summary="articleData.subTitle" typeNumber=0 :show="show" @click="show = false"></b-share-wechat>
		<!-- <x-modal ref="modal" title="您还未登录" content="是否立即去登录？" @sure="sure"></x-modal> -->
    </view>
</template>

<script>
    import constVal from '../../common/utils/constval.js'
    import { lastDateTime } from '@/common/utils'
    import { mapState } from 'vuex'
    export default {
        data () {
            return {
                id: '',
                articleData: '',
                articleList: [],
                show: false,
                url: '',
                imageUrl: '',
                summary: ''
            }
        },
        onShow() {
            this.show = false
        },
        onLoad(option) {
            if(option.id){
                this.id = option.id
                this.getDetail()
                this.getHolList()
            }
        },
        computed:{
            ...mapState(['isLogin']),
            creadTime(){
                return (time) => {
                    let t = time.replace(/-/g, '/')
                    return lastDateTime(new Date(t).getTime())
                }
            }
        },
        methods:{
			sure(){
				 this.openUrl('../my/login')
			},
            getDetail(){
                this.$api.get('article/article/getDetails.do',{params:{id:this.id}}).then(res =>{
                	if(res.success){
                		this.articleData = res.data
						uni.pageScrollTo({
						    scrollTop: 0,
						    duration: 0,
							selector:".content"
						});
                	}
                })
            },
            getHolList(){
                this.$api.get('article/article/getHotsWithoutId.do',{params:{id:this.id}}).then(res =>{
                	if(res.success){
                		this.articleList = res.data
                	}
                })
            },
            seeDetail(item){
                this.id = item.id
                this.getDetail()
                this.getHolList()
            },
            share(){
     //            console.log(this.isLogin);
     //            if(!this.isLogin){
     //                // this.showModel('您还未登录','是否立即去登录？',()=>{
     //                //     this.openUrl('./login')
     //                // })
					// this.$refs.modal.open()
     //                return
     //            }
                this.show = true
                this.url = constVal.UPLOAD_IMG_URL + 'broker/pages/train/detail?id='+ this.id
            },
        }
    }
</script>

